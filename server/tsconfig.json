{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "lib": [
      "es6",
      "es2015",
      "dom"
    ],
    "types": [
      "reflect-metadata",
      "node"
    ],
    "typeRoots": [
      "../node_modules/@types"
    ],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules"
  ]
}